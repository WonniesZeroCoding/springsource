<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.mapper.PersonMapper">
	<!-- sql 구문 작성 -->
	<!-- 주의 사항 : 세미콜론 없어야 함, #{} 으로 만들어야함, id 값은 interface의 메소드 명과 일치시켜야 함 -->
	<insert id="insertPerson">
		insert into person(id,name) values(#{id},#{name})
	</insert>

	<update id="updatePerson">
		update person set name=#{name} where id = #{id}
	</update>
	
	<delete id="deletePerson">
		delete from person where id=#{id}
	</delete>
	
	<!-- select는 resultType을 하나 써줌 
		 select count(*) from person => resultType = "int"
		 select name from person where id=1 -> resultType = "String"
	-->
	
	<select id="selectPerson" resultType="com.study.dto.PersonDTO">	
		select * from person where id=#{id}
	</select>

</mapper>