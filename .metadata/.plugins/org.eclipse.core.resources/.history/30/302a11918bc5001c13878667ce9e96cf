package com.study.myapp;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import com.study.service.PersonService;

// mybatis 사용 시, 가장 많이 나오는 에러
// 바인딩 : 연결 -- 연결하는 부분이 잘못 되었다 --> SQL문이 들어오는 @insert 부분이 문제가 있을 수 있다
//org.apache.ibatis.binding.BindingException: Parameter 'id' not found. 
//Available parameters are [arg1, arg0, param1, param2]


public class PersonApp {
	public static void main(String[] args) {
		ApplicationContext ctx = new ClassPathXmlApplicationContext("config.xml");
		
		PersonService service = (PersonService) ctx.getBean("person");
		System.out.println(service.insertPerson("kang456", "강민섭"));
	
	}
}
